{% extends "base.njk" %}

{% block body %}
<form action="/third" method="post" name="InstructionsSelection">
    <input type="hidden" name="fname" value="{{ fname }}" />
    <input type="hidden" name="lname" value="{{ lname }}" />
    <input type="hidden" name="sex" value="{{ sex }}" />
    <input type="hidden" name="offensedate" value="{{ offensedate }}" />
    <div class="form-group">
        <label> Victim First name: <label>
        <input type="text" name="vfname">
    </div>
    <div class="form-group">
        <label> Victim Last name: <label>
        <input type="text" name="vlname">
    </div>
{% if homicide %}
    {% block homicide %}
        {% include "homicide-form.njk" %}
    {% endblock %}
{% endif %}
{% if first_degree_assult %}
    {% block firstDegreeAssult %}
        {% include "first-degree-assault-form.njk" %}
    {% endblock %}
{% endif %}
    <input type="submit" value="Submit">
</form>

{% endblock %}
